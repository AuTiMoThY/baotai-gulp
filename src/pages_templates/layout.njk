{% set web_title = "寶台建設機構" %}
<!DOCTYPE html>
<html lang="zh">
    <head>
        <title>
            {% if page_title !='' %}[[ page_title ]] |{% endif %} [[web_title]]
        </title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, user-scalable=no" />
        <link rel="icon" href="assets/images/ico.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Cormorant+Infant:wght@300;400;500;600;700&family=Noto+Sans+TC:wght@100;300;500;700&family=Noto+Serif+TC:wght@500;700&display=swap"
            rel="stylesheet" />

        <link rel="stylesheet" href="assets/css/hamburgers.css" />
        <link rel="stylesheet" href="assets/css/app.css?1" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.css" />

        <link
            rel="stylesheet"
            href="[[ CSS_PATH ]]style.css{% if VERSION != '' %}?v=[[VERSION]]{% endif %}" />
        {% block head_script %}{% endblock %}
    </head>
    <body class="[[body_class]]">
        <!-- ========================================================================= -->
        <!-- .body_wrap  START-->
        <header class="header">
            <div class="header-box">
                <a class="logo-box" href="index.html">
                    <img src="assets/images/index/logo.webp" alt="" srcset="" />
                </a>

                <button class="hamburger hamburger--spin pad" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>

                <div class="link-box">
                    <div class="l_div">
                        <a class="link" href="javascript:;">
                            <div class="en">ABOUT</div>
                            <div class="zh">關於寶台</div>
                        </a>
                        <ul class="sub_link">
                            <li><a href="">經營理念</a></li>
                            <li><a href="">大事年表</a></li>
                        </ul>
                    </div>

                    <div class="l_div">
                        <a class="link" href="javascript:;">
                            <div class="en">PROJECT</div>
                            <div class="zh">建案資訊</div>
                        </a>
                        <ul class="sub_link">
                            <li><a href="project.html">新案預告</a></li>
                            <li><a href="project.html">熱銷建案</a></li>
                            <li><a href="">推案地圖</a></li>
                        </ul>
                    </div>

                    <div class="l_div">
                        <a class="link" href="portfolio.html">
                            <div class="en">PORTFOLIO</div>
                            <div class="zh">經典業績</div>
                        </a>
                    </div>

                    <div class="l_div">
                        <a class="link" href="work_progress.html">
                            <div class="en">PROGRESS</div>
                            <div class="zh">工程進度</div>
                        </a>
                    </div>
                    <div class="l_div">
                        <a class="link" href="news.html">
                            <div class="en">NEWS</div>
                            <div class="zh">最新消息</div>
                        </a>
                    </div>
                    <div class="l_div">
                        <a class="link" href="contact.html">
                            <div class="en">CONTACT</div>
                            <div class="zh">聯絡我們</div>
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <div class="body_wrap" id="app">{% block content %}{% endblock %}</div>
        <footer class="footer">
            <div class="footer-box">
                <div class="copyright">
                    Copyright &copy; 2025寶台建設機構股份有限公司版權所有
                </div>
                <div class="address">地址：桃園市龍潭區渴望二路99巷98號2樓</div>
                <div class="phone">TEL： 03-407-2003</div>
            </div>
        </footer>
        <!-- /.body_wrap  END  !!-->
        <!-- =========================================================================-->
        <script
            src="https://code.jquery.com/jquery-3.7.0.min.js"
            integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/SplitText.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.js"></script>
        {% block page_script %}{% endblock %}
    </body>
</html>
