{% set page_title = "新案預告" %}
{% set body_class = "preview-body " %}
{% set galleryData = [
    {
        "img": "assets/images/preview/img-1.jpg",
        "name": "桃園大竹案",
        "txt": "即將公開 敬請期待"
    },
    {
        "img": "assets/images/preview/img-2.jpg",
        "name": "桃園楊梅案",
        "txt": "即將公開 敬請期待"
    },
    {
        "img": "assets/images/preview/img-3.jpg",
        "name": "桃園八德案",
        "txt": "即將公開 敬請期待"
    },
    {
        "img": "assets/images/preview/img-4.jpg",
        "name": "桃園大園案",
        "txt": "即將公開 敬請期待"
    }
] %}
{% macro galleryItem(img, name, txt) %}
    <div class="swiper-slide">
        <div class="item-box">
            <div class="top-box">
                <div class="img-box">
                    <a href="preview_detail.html">
                        <img src="[[ img ]]" alt="" srcset="">
                    </a>
                </div>
            </div>
            <div class="bottom-box">
                <div class="name-box">
                    <div class="name">[[ name ]]</div>
                    <div class="txt">[[ txt ]]</div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
{% extends "layout.njk" %}
{% block content %}
    <main class="main-box page-preview">
        <div class="banner-box page-banner">
            <div class="img-box">
                <picture>
                    <source srcset="assets/images/preview/banner-m.jpg"
                            media="(max-width: 1024px)" />
                    <img src="assets/images/preview/banner.jpg" alt="" />
                </picture>
            </div>
        </div>
        <div class="title-box page-title">
            <div class="top">
                <div class="line"></div>
                <div class="zh">新案預告</div>
                <div class="line"></div>
            </div>
            <div class="bottom">
                <div class="en">NEW PREVIEW</div>
            </div>
        </div>
        <div class="gallery">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    {% for item in galleryData %}[[ galleryItem(item.img, item.name, item.txt) ]]{% endfor %}
                </div>
            </div>
        </div>
        <div class="swiper-controller">
            <div class="prev-next-box">
                <div class="slider-arrow prev">
                    <img class="prev-img"
                         alt="prev"
                         src="assets/images/project/prev.svg"
                         srcset="" />
                    <div>PREV</div>
                </div>
                <!-- 進度條 -->
                <div class="swiper-pagination-progressbar"></div>
                <div class="slider-arrow next">
                    <div>NEXT</div>
                    <img class="next-img"
                         alt="next"
                         src="assets/images/project/next.svg"
                         srcset="" />
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </main>
{% endblock %}
{% block page_script %}
    <script src="js/preview.js{% if VERSION != '' %}?v=[[VERSION]]{% endif %}"></script>
{% endblock %}
